---
apiVersion: v1
kind: Service
metadata:
{%- if ambient_enabled %}
  annotations:
    networking.istio.io/traffic-distribution: {{ istio_traffic_distribution }}
{%- endif %}
  name: {{ httpbin_service_name }}
  namespace: {{ httpbin_namespace }}
  labels:
    app: httpbin
{%- if ambient_enabled %}
    solo.io/service-scope: global
{%- endif %}
spec:
  ports:
    - name: http
      port: {{ httpbin_service_port }}
      targetPort: {{ httpbin_container_port }} ### http # named does not work for ambient mc {{ peering_discover_suffix }}
  selector:
    app: httpbin
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: httpbin
  namespace: {{ httpbin_namespace }}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: httpbin
  namespace: {{ httpbin_namespace }}
spec:
  replicas: {{ httpbin_size }}
  selector:
    matchLabels:
      app: httpbin
  template:
    metadata:
      labels:
        app: httpbin
    spec:
      serviceAccountName: httpbin
      containers:
        - image: docker.io/mccutchen/go-httpbin:latest
          imagePullPolicy: IfNotPresent
          name: httpbin
          command: [ go-httpbin ]
          args:
            - "-port"
            - "{{ httpbin_container_port }}"
            - "-max-duration"
            - "600s" # override default 10s
          ports:
            - containerPort: {{ httpbin_container_port }}
              name: http
