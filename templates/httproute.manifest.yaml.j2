---
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: {{ service }}-route
  namespace: {{ namespace }}
spec:
  parentRefs:
  - name: {{ ingress_gateway }}
    group: gateway.networking.k8s.io    ### Added for kgateway, does it break istio gateway? Maybe fixed now??
    kind: Gateway                       ### Added
    namespace: {{ ingress_namespace }}  ### Added
  hostnames: ["{{ service }}.{{ tldn }}"]
  rules:
  - matches:
    - path:
        type: PathPrefix
        value: /
    backendRefs:
{%- if multicluster_enabled %}
    - kind: Hostname
      group: networking.istio.io
      name: {{ service }}.{{ service_namespace }}.mesh.internal # Will require ReferenceGrant in service_namespace if crosses NS boundary
      port: {{ service_port }}
{%- else %}
    - group: ""
      kind: Service
      name: {{ service }}
      namespace: {{ service_namespace }} # Will require ReferenceGrant in service_namespace if crosses NS boundary
      port: {{ service_port }}
{%- endif %}
{%- if extauth_enabled %}
    filters:
    - type: ExtensionRef
      extensionRef:
{%- if ingress_gateway_class == "gloo-gateway-v2" %}
        group: gloo.solo.io
        kind: GlooTrafficPolicy
{%- else %}
        group: gateway.kgateway.dev
        kind: TrafficPolicy
{%- endif %}
        name: {{ traffic_policy }}
{%- endif %}
...
