---
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: remote-helloworld-route
  namespace: {{ gloo_gateway_namespace }}
spec:
  parentRefs:
  - name: {{ ingress_gateway }}
    group: gateway.networking.k8s.io    ### Added for kgateway, does it break istio gateway? Maybe fixed now??
    kind: Gateway                       ### Added
    namespace: {{ ingress_namespace }}  ### Added
  hostnames: ["remote-helloworld.{{ tldn }}"]
  rules:
  - matches:
    - path:
        type: PathPrefix
        value: /
    backendRefs:
{%- if ingress_gateway_class == "gloo-gateway-v2" or ingress_gateway_class == "kgateway" %}
    - group: gateway.kgateway.dev
      kind: Backend
      name: remote-helloworld-backend
{%- elif ingress_gateway_class == "gloo-gateway" %}
    - group: gloo.solo.io
      kind: Upstream
      name: remote-helloworld-upstream
{%- endif %}
      namespace: {{ gloo_gateway_namespace }}
