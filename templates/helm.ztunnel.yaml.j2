{%- if istio_revision %}
revision: {{ istio_revision }}
{%- endif %}
hub: {{ istio_repo }}
tag: {{ istio_ver }}{{ istio_flavor }}
variant: {{ istio_variant }}
{%- if multicluster_enabled %}
multiCluster:
  clusterName: {{ cluster }}
network: {{ network }}
{%- endif %}
env:
  ISTIO_META_ENABLE_HBONE: true
  ISTIO_META_DNS_CAPTURE: true
  SKIP_VALIDATE_TRUST_DOMAIN: true
{%- if docker_desktop_enabled %}
resources:
  limits:
    cpu: 10m
    memory: 128Mi
  requests:
    cpu: 1m
    memory: 2Mi
{%- endif %}
{%- if spire_enabled %}
spire:
  enabled: true
{%- endif %}
{%- if gme_enabled %}
l7Telemetry:
  distributedTracing:
    otlpEndpoint: "http://gloo-telemetry-collector.{{ gme_namespace }}.svc.cluster.local:4317"
{%- endif %}
