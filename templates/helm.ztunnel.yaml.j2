{% if revision %}
revision: {{ revision }}
{% endif %}
hub: {{ istio_repo }}
tag: {{ istio_ver }}{{ flavor }}
multiCluster:
  clusterName: {{ cluster }}
network: {{ network }}
env:
  ISTIO_META_ENABLE_HBONE: true
  ISTIO_META_DNS_CAPTURE: true
  SKIP_VALIDATE_TRUST_DOMAIN: true
  resources:
    limits:
      cpu: 10m
      memory: 128Mi
    requests:
      cpu: 1m
      memory: 2Mi
